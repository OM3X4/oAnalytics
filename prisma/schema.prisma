generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model App {
  id            String   @id @default(uuid())
  user_id       String
  creation_date DateTime @default(now())
  name          String
  origin        String
  events        Event[]
}

model Event {
  id         Int      @id @default(autoincrement())
  path       String
  country    String?
  date       DateTime
  client_id  String
  session_id String
  browser    String?
  os         String?
  referrer   String?
  app_id     String?
  app        App?     @relation(fields: [app_id], references: [id])
}

model User {
  id            String    @id
  name          String?
  email         String    @unique
  image         String?
  role          String    @default("USER")
  emailVerified DateTime? @db.Date
  createdAt     DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime? @default(now()) @db.Timestamptz(6)
  Account       Account[]
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([provider, providerAccountId])
}

model event_rollup_hourly {
  bucket          DateTime? @db.Timestamp(6)
  app_id          String?   @db.Uuid
  path            String?
  country         String?
  browser         String?
  os              String?
  views           Int?
  unique_visitors Int?
  id              Int       @id @default(autoincrement())
}
